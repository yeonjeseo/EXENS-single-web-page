/* Layout */
header {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: var(--z-fixed);
  background-color: var(--header-color);
}

.l-main {
  margin-top: var(--header-height);
}
/* NAV */
.nav {
  max-width: 1024px;
  height: var(--header-height);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav__toggle {
  color: var(--text-color);
  font-weight: var(--font-medium);
}

.nav__item {
  margin-bottom: var(--mb-2);
}

.nav__link,
.nav__logo,
.nav__toggle {
  color: var(--text-color);
  font-weight: var(--font-medium);
}

.nav__toggle {
  font-size: var(--h2-font-size);
  cursor: pointer;
}

.nav__link {
  transition: 0.4s;
}

/* Media query for nav */
@media screen and (max-width: 768px) {
  /* 768px 이하일 때 위로 숨겨놓고 햄버거 클릭하면 slide down */
  .nav__menu {
    position: fixed;
    top: -100%;
    left: 0;
    width: 100%;
    padding: 1.5rem 0 1rem;
    text-align: center;
    transition: 0.4s;
    background-color: var(--body-color);
    box-shadow: 0 4px 4px rgba(0, 0, 0, 0.1);
    border-radius: 0 0 1rem 1rem;
    z-index: var(--z-fixed);
  }
}
/* 미디어 쿼리 다음에 설정해야 classList toggle 해서 css 설정이 적용됨?!!!!! */
.show-menu {
  top: var(--header-height);
}

.title {
  font-family: var(--body-font);
  font-weight: var(--font-light);
  font-size: var(--h3-font-size);
}

@media screen and (min-width: 768px) {
  body {
    margin: 0;
  }

  .section {
    margin-left: 3rem;
    margin-right: 3rem;
  }

  .nav {
    height: calc(--header-height + 1.5rem);
  }
  .nav__list {
    display: flex;
  }
  .nav__item {
    margin-left: var(--mb-6);
    margin-bottom: 0;
  }

  .nav__toggle {
    display: none;
  }
}

@media screen and (min-width: 960px) {
  .bd-container {
    margin-right: auto;
    margin-left: auto;
  }
}

.about {
  margin-top: 5rem;
}

.about__data {
  display: flex;
  justify-content: space-evenly;
}

.data__item {
  width: 250px;
  text-align: center;
}
.data__img {
  width: 30%;
  margin: var(--mb-3);
}
.data__description {
  font-size: var(--smaller-font-size);
}

.about__ceoContainer {
  margin-top: var(--mb-6);
}

.ceo__greeting {
  display: flex;
  align-items: center;
}

.ceo__avater {
  border-radius: 40px;
}

.ceo__typo {
  margin-left: 2rem;
}

/* Table */
.about__patents {
  margin-top: var(--mb-6);
  text-align: center;
}

table {
  margin-left: auto;
  margin-right: auto;
  width: 80%;
}

tr {
  height: 3rem;
}

.table__head {
  background-color: rgb(173, 175, 174);
}

#item2,
#item4 {
  background-color: rgba(214, 214, 214, 0.959);
}

/* FOOTER */
footer {
  background-color: var(--footer-bg-color);
  margin-bottom: 0;
  bottom: 0;
}
.footer__container {
  display: flex;
  flex-direction: column;
}
